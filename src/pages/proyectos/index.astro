---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HeaderPage from "../../components/HeaderPage.astro";
import CardsGrid from "../../components/CardsGrid.astro";
import BasicCard from "../../components/BasicCard.astro";
import { getCollectionByDate } from "../../utils/getCollectionByDate";
const allProjects = await getCollectionByDate('projects')
---

<BaseLayout pageTitle="Proyectos">
  <HeaderPage
    title="Proyectos"
    description="Aquí encontrarás algunos de mis proyectos personales y profesionales. Si te interesa colaborar, no dudes en contactarme. El código fuente de algunos de mis proyectos está disponible en Github"
  />
  <CardsGrid>
    {
      allProjects.map((project) => (
        <BasicCard
          key={project.slug}
          title={project.data.title}
          description={project.data.description}
          image={project.data.image}
          slug={project.slug}
          type="proyectos"
        />
      ))
    }
  </CardsGrid>
</BaseLayout>
