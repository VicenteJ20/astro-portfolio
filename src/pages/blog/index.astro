---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import HeaderPage from "../../components/HeaderPage.astro";
import CardsGrid from "../../components/CardsGrid.astro";
import BasicCard from "../../components/BasicCard.astro";
const allPosts = await getCollection("posts");
---

<BaseLayout pageTitle="Blog">
  <HeaderPage
    title="Blog"
    description="Bienvenido/a a mi blog, aquí encontrarás artículos sobre desarrollo web, tecnología, sistemas operativos, programación y más temas relacionados. ¡Espero que te gusten y los compartas en redes sociales!"
  />
  <CardsGrid>
    {
      allPosts.map((post) => (
        <BasicCard
          key={post.slug}
          title={post.data.title}
          description={post.data.description}
          image={post.data.image}
          slug={post.slug}
          type="blog"
        />
      ))
    }
  </CardsGrid>
</BaseLayout>
