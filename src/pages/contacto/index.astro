---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HeaderPage from "../../components/HeaderPage.astro";
import LinkRefIcon from "../../components/LinkRefIcon.astro";
import TwitterIcon from "../../icons/TwitterIcon.astro";
import LinkedinIcon from "../../icons/LinkedinIcon.astro";
import GithubIcon from "../../icons/GithubIcon.astro";
---

<BaseLayout pageTitle="Contacto">
  <HeaderPage
    title="Contacto"
    description="¡Te gusta mi trabajo y quieres que trabajemos juntos? Pronto añadiré un formulario para que puedas contactarme. Por el momento puedes contactarme a través de mis redes sociales listadas a continuación. "
  />
  <section>
    <h2 class="text-3xl font-bold text-white text-center pt-20 pb-12 hidden md:block">¡Contáctame por redes sociales!</h2>
  </section>
  <div class='flex flex-col md:flex-row md:gap-y-12 md:gap-x-4 gap-y-8 gap-x-8 md:py-20'>
    <LinkRefIcon url="https://x.com/jvicente_20" message="Twitter / X">
      <TwitterIcon />
    </LinkRefIcon>
    <LinkRefIcon url="https://www.linkedin.com/in/vicentejorquera" message="Sígueme en LinkedIn">
      <LinkedinIcon />
    </LinkRefIcon>
    <LinkRefIcon url="https://github.com/VicenteJ20" message="Sígueme en GitHub">
      <GithubIcon />
    </LinkRefIcon>
  </div>
</BaseLayout>
