---
import '@fontsource/poppins';
import Footer from "../components/Footer.astro";
import Header from "../components/header/Header.astro";
import MetaTags from '../components/MetaTags.astro';
const { pageTitle, layout, metaKeys, metaDescription, metaOgDesc, metaOgTitle, metaOgImage } = Astro.props;

---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    {
      layout === 'project' ? (
        <link rel="stylesheet" href='/styles/projectStyle.css' />
      ) : layout === 'post' && (
        <link rel="stylesheet" href='/styles/postStyle.css' />
      )
    }

    <MetaTags
      metaKeys={metaKeys}
      metaDescription={metaDescription}
      metaOgTitle={metaOgTitle}
      metaOgDesc={metaOgDesc}
      metaOgImage={metaOgImage}
    />
    
    <link rel='sitemap' href='/sitemap-index.xml' />
    <link rel='alternate' type='application/rss+xml'
    title='RSS Feed by Vicente Jorquera' href={`${Astro.site}rss.xml`} />
    <link rel='robots' href='/robots.txt' />
    
    <title> {pageTitle} | Vicente Jorquera</title>
    <style is:global>
      body {
        font-family: 'Poppins', sans-serif;
      }
      .image-bg {
        background-image: url('/images/background-pattern-3.svg');
        background-position: left top;
        background-repeat: repeat;
        background-size: 100%;
      }

      @media screen and (max-width:1500px){
        .image-bg {
          background-size: 150%;
        }
      }

      @media screen and (max-width:1200px){
        .image-bg {
          background-size: 200%;
        }
      }

      @media screen and (max-width:900px){
        .image-bg {
          background-size: 250%;
        }
      }
    </style>
  </head>
  <body class="bg-zinc-950 text-zinc-100 image-bg p-0 max-w-screen">
    <main class="backdrop-blur-4xl p-0 min-h-screen" >
      <Header />
      <section class='max-w-screen-2xl mx-auto px-5 md:px-8 pb-8 pt-[4.5rem] min-h-[95vh]'>
        <slot />
      </section>
      <Footer />
    </main>
  </body>
</html>