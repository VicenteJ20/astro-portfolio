---
import { Image } from "astro:assets"
const { title, description, slug, minimal, image, type } = Astro.props
---

<div
  class="bg-zinc-950 hover:border-lime-400 rounded-lg bg-opacity-45 border border-zinc-700 flex flex-col gap-1.5 transition-all duration-300 ease-in-out"
>
  {
    image && (
      <a href={`/${type}/${slug}`}>
        <Image
          class="rounded-t-lg w-full h-52 sm:h-72 md:h-60 object-cover"
          src={image.url}
          alt={image.alt}
          width={1200}
          height={900}
          loading='eager'
        />
      </a>
    )
  }
  <div class={`${image ? "px-4 py-3" : "p-4"}`}>
    <h3
      class={`${minimal ? 'text-lg' : 'text-base lg:text-lg'} font-medium text-zinc-100 transition-all duration-300 ease-in-out`}
    >
      <a class="hover:underline" href={`/${type}/${slug}`}>{title}</a>
    </h3>
    <p class={`text-zinc-300 ${minimal ? 'line-clamp-1' : 'line-clamp-2 text-sm lg:text-base'}`}>{description}</p>
  </div>
</div>